{
    "manifest_version": 3,
    "name": "HTML Reader Extension",
    "version": "1.0",
    "description": "A Chrome extension that reads content from a website's HTML.",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
}
  